@using Microsoft.AspNetCore.Identity

@inject IHttpContextAccessor HttpContextAccessor

<ul class="navbar-nav">
    @{
        ViewBag.CustomerName = HttpContextAccessor.HttpContext.Session.GetString("CustomerName");
        ViewBag.CustomerID = HttpContextAccessor.HttpContext.Session.GetString("CustomerID");
    }
@if (ViewBag.CustomerName != null)
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Cart" asp-action="ViewCart">Cart</a>
    </li>
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-controller="Home" asp-action="Index" title="Manage">Hello @ViewBag.CustomerName!</a>
    </li>
    
    <li class="nav-item">
        <form  class="form-inline" asp-controller="Login" asp-action="Logout"  asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>

}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Cart" asp-action="ViewCart">Cart</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Login" asp-action="Signup">Sign Up</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Login" asp-action="Login">Login</a>
    </li>
}
</ul>
